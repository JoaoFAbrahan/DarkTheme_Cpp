{
	"name": "DarkTheme C++",
	"type": "dark",
	"colors": {
		"editor.background": "#181818",
		"editor.foreground": "#eeffff",
		"activityBarBadge.background": "#007acc",
		"sideBarTitle.foreground": "#bbbbbb"
	},
	"tokenColors": [
		/// ###### C++ FILES ######
		/// Include and Directive
		{
			"name": "Directives and Include",
			"scope": [
				"keyword.control.directive.include",
				"keyword.control.directive.pragma",
				"meta.preprocessor.pragma",
				"keyword.control.directive.define",
				"keyword.control.directive.define"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#e283ff"
			}
		},
		{
			"name": "Librarys",
			"scope": [
				"string.quoted.other.lt-gt.include",
				"string.quoted.double.include"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#f17500"
			}
		},
		{
			"name": "Preprocessor",
			"scope": [
				"meta.preprocessor.macro",
				"meta.preprocessor.conditional",
				"constant.language.nullptr",
				"constant.language.NULL",
				"entity.name.function.preprocessor",
			],
			"settings": {
				"foreground": "#ff0e87"
			}
		},
		{
			"name": "Preprocessor Condition",
			"scope": [				
				"keyword.control.directive.conditional.ifdef",
				"keyword.control.directive.endif"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#e283ff"
			}
		},

		/// Number, String and Boolean
		{
			"name": "Number",
			"scope": [
				"constant.numeric.decimal",
				"constant.numeric.decimal.point",
				"keyword.other.unit.suffix.floating-point"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#ffc400"
			}
		},
		{
			"name": "String",
			"scope": [
				"string.quoted.double",
				"string.quoted.single"
			],
			"settings": {
				"foreground": "#d87148"
			}
		},
		{
			"name": "String Terminal",
			"scope": "constant.character.escape",
			"settings": {
				"foreground": "#fdddad"
			}
		},
		{
			"name": "String Declaration",
			"scope": [
				"punctuation.definition.string.begin",
				"punctuation.definition.string.end"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#df8a0b"
			}
		},
		{
			"name": "Boolean",
			"scope": [
				"constant.language.true",
				"constant.language.false",
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#91d650"
			}
		},

		/// Namespace
		{
			"name": "Namespace Declaration",
			"scope": [
				"storage.type.namespace.directive",
				"storage.type.namespace.definition",
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#91d650"
			}
		},
		{
			"name": "Namespace Name Title",
			"scope": "entity.name.namespace",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#f17500"
			}
		},

		/// Types
		{
			"name": "Types Declaration",
			"scope": [
				"keyword.other.using.directive",
				"storage.modifier",
				"storage.type",
				"keyword.other.typedef",
				"keyword.operator.new",
				"keyword.operator.delete",
				"variable.language"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#91d650"
			}
		},
		
		/// Variable
		{
			"name": "Local Variable",
			"scope": [
				"variable",
				"variable.other.property",				
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#699adb"
			}
		},
		{
			"name": "Global Variable",
			"scope": "variable.other.global",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#88ddf7d0"
			}
		},
		{
			"name": "Entity Type",
			"scope": "entity.name.type",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#f3bd6c"
			}
		},
		{
			"name": "Enumerator Type",
			"scope": "variable.other.enummember",
			"settings": {
				"foreground": "#f38ad0"
			}
		},

		/// Keyword
		{
			"name": "Conditions and Others",
			"scope": "keyword.control",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#b97dd1"
			}
		},

		/// Functions
		{
			"name": "Function",
			"scope": "entity.name.function",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#ffffff"
			}
		},

		/// Dot Acess
		{
			"name": "Dot Function Acess",
			"scope": [
				"punctuation.separator.dot-access",
				"punctuation.separator.pointer-access",
				"punctuation.separator.scope-resolution",
				"keyword.operator.bitwise",
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#ff5b5b"
			}
		},
		
		/// Comment
		{
			"name": "Comment",
			"scope": "comment",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#517b7e"
			}
		},
		{
			"name": "Comment Docummentation",
			"scope": [
				"punctuation.definition.comment.documentation",
				"comment.line.double-slash.documentation",
				"entity.name.tag"
			],
			"settings": {
				"foreground": "#6A9955"
			}
		},
		
		/// Symbols		
		{
			"name": "Preprocessor",
			"scope": "punctuation.section",
			"settings": {
				"foreground": "#d8d8d8"
			}
		},
		



		/// ###### JSON FILES ######
		/// Property
		{
			"name": "Property JSON",
			"scope": "support.type.property-name.json",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#88ddf7d0"
			}
		},

		/// Comment
		{
			"name": "Comments JSON",
			"scope": "comment.line.double-slash.js",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#6A9955"
			}
		},

		/// String
		{
			"name": "String JSON",
			"scope": [
				"string.quoted.double.json.comments",
				"punctuation.definition.string.begin.json.comments",
				"punctuation.definition.string.end.json.comments"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#d87148"
			}
		},

		/// Synbols
		{
			"name": "Synbols",
			"scope": "meta.structure.dictionary.json",
			"settings": {
				"foreground": "#d8d8d8"
			}
		},




		/// ###### MD FILES ######
		/// Name Section
		{
			"name": "Name Section MD",
			"scope": "entity.name.section.markdown",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#f17500"
			}
		},

		/// Paragraph
		{
			"name": "Paragraph MD",
			"scope": "meta.paragraph.markdown",
			"settings": {
				"foreground": "#6A9955"
			}
		},

		/// Link
		{
			"name": "Link Title MD",
			"scope": "string.other.link.title.markdown",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#d87148"
			}
		},
		{
			"name": "Link MD",
			"scope": "markup.underline.link.markdown",
			"settings": {
				"foreground": "#88ddf7d0"
			}
		},

		/// Symbols
		{
			"name": "Pontuation MD",
			"scope": [
				"punctuation.definition.heading.markdow",
				"punctuation.definition.metadata.markdown",
				"markup.list.unnumbered.markdown",
				"punctuation.definition.list.begin.markdown",
				"punctuation.definition.string.begin.markdown",
				"punctuation.definition.string.end.markdown"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#ffffffd0"
			}
		},
		



		/// ###### XML FILES ######
		/// Entity XML
		{
			"name": "Entity XML",
			"scope": "entity.name.tag.xml",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#e283ff"
			}
		},

		/// Name Tag XML
		{
			"name": "Name Section XML",
			"scope": "entity.name.tag.localname.xml",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#ff0e87"
			}
		},

		/// Attribute Tag XML
		{
			"name": "Attribute XML",
			"scope": [
				"entity.other.attribute-name.localname.xml",
				"entity.other.attribute-name.xml"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#88ddf7d0"
			}
		},
		
		/// Text XML
		{
			"name": "Text XML",
			"scope": "text.xml",
			"settings": {
				"foreground": "#ffffffd0"
			}
		},

		/// Synbols XML
		{
			"name": "Synbols XML",
			"scope": "punctuation.definition.tag.xml",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#ffffff"
			}
		},

		/// String XML
		{
			"name": "String XML",
			"scope": "string.quoted.double.xml",
			"settings": {
				"foreground": "#d87148"
			}
		},
		



		/// ###### CMake FILES ######
		/// Keyword CMake
		{
			"name": "Keyword CMake",
			"scope": "keyword.cmake",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#F17500"
			}
		},

		/// Entity CMake
		{
			"name": "Entity CMake",
			"scope": "entity.source.cmake",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#91d650"
			}
		},

		/// Source CMake
		{
			"name": "Source CMake",
			"scope": "source.cmake",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#ffffff"
			}
		},
	]
}
